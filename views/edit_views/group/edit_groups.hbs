{{#if request}}
{{#compare request "success"}}
    <div class="alert alert-success" role="alert">
        {{alert_msg}}
    </div>
{{/compare}}
{{#compare request "failure"}}
    <div class="alert alert-warning" role="alert">
        {{alert_msg}}
    </div>
{{/compare}}
{{/if}}

<div class="content">
    <div>
        <a href="/new_group"><button type="button" class="btn btn-primary">Add New Group</button></a>
    </div>
    <h1> Groups </h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each groups}}
                    <tr>
                        <th scope="row">{{this.name}}</th>
                        <td>{{this.email}}</td>
                        <td><a href="/edit_group?group={{this._id}}"><button type="button" class="btn btn-primary"><i class="fa fa-edit"></i></button></a><span class="space"></span><button id="delete-{this._id}" type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal-{{this._id}}"><i class="fa fa-trash"></i></button></a></td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="delete-modal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="deleteGroupModal" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="deleteGroupModalLabel-{{this._id}}">Delete Group</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <span> Are you sure you want to delete this group?
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger trash" name="{{this.name}}" id="delete-confirm-{{this._id}}">Delete</button>
                          </div>
                        </div>
                      </div>
                    </div>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/js/edit_groups.js"></script>
