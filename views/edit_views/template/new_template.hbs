{{#if request}}
    {{#compare request "success"}}
        <div class="alert alert-success" role="alert">
            {{../alertMsg}}
        </div>
    {{/compare}}
    {{#compare request "failure"}}
        <div class="alert alert-warning" role="alert">
            {{../alertMsg}}
        </div>
    {{/compare}}
{{/if}}
<div class="content">
    {{#if msg}}
    <div class="alert alert-danger" role="alert">
        {{msg}}
    </div>
    {{/if}}
    <h2> Create New Template </h2>
    <form method="POST">
    <div class="form-group">
      <label for="inputTitle" class="col-2 col-form-label">Title</label>
      <input class="form-control" name="title" type="inputTitle" id="inputTitle" placeholder="Title">
    </div>
      <div class="form-group">
        <label for="inputSubject" class="col-2 col-form-label">Subject</label>
        <input class="form-control" name="subject" type="inputSubject" id="inputSubject" placeholder="Subject">
      </div>
      <div class="form-group">
          <label for="body">Body</label>
          <textarea name="body" class="form-control" rows="7" id="body"></textarea>
      </div>
      <a href="/edit_templates"><button type="button" class="btn btn-danger">Cancel</button></a>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
<script src="/js/getQuery.js"></script>
<script src="/js/new_template.js"></script>
