{{#if request}}
    {{#compare request "success"}}
        <div class="alert alert-success" role="alert">
            {{alert_msg}}
        </div>
    {{/compare}}
    {{#compare request "failure"}}
        <div class="alert alert-warning" role="alert">
            {{alert_msg}}
        </div>
    {{/compare}}
{{/if}}
<div class="content">
    <button id="delete_template" type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#delete_template_modal">Delete Template</button>
    <h2> Edit Template </h2>
    <form method="POST">
    <div class="form-group">
      <label for="inputTitle" class="col-2 col-form-label">Title</label>
      <input class="form-control" name="title" type="inputTitle" id="inputTitle" placeholder="Title" value="{{template.title}}">
    </div>
      <div class="form-group">
        <label for="inputSubject" class="col-2 col-form-label">Subject</label>
        <input class="form-control" name="subject" type="inputSubject" id="inputSubject" placeholder="Subject" value="{{template.subject}}">
      </div>
      <div class="form-group">
          <label for="body">Body</label>
          <textarea name="body" class="form-control" rows="7" id="body">{{template.body}}</textarea>
      </div>
      <a href="/edit_templates"><button type="button" class="btn btn-danger">Cancel</button></a>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <!-- Modal -->
    <div class="modal fade" id="delete_template_modal" tabindex="-1" role="dialog" aria-labelledby="deleteTemplateModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteTemplateModalLabel">Delete Template</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <span> Are you sure you want to delete this template?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" _id="{{template._id}}" id="delete_confirm">Delete</button>
          </div>
        </div>
      </div>
    </div>
</div>
<script src="/js/edit_template.js"></script>
