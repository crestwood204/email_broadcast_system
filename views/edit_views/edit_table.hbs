<div>
  <span style="float: right;">
    <form id="search-bar-form" action="{{endpoint}}" class="form-inline my-2 my-lg-0">
      <input id="search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" value="{{search}}">
      <button id="search-btn" class="btn yellow-button my-2 my-sm-0 form-control" type="submit">&nbsp<i class="fa fa-search"></i>&nbsp</button>
      <span style="padding: 4px;"> </span>
      <a href="/new_template"><button class="btn yellow-button my-2 my-sm-0" type="button"><i class="fa fa-plus"></i></button></a>
    </form>
  </span>
  <h1> Templates </h1>
  <table class="table">
      <thead>
          <tr>
              <th scope="col">Title</th>
              <th scope="col">Subject</th>
              <th scope="col">Created By</th>
              <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
          {{#each templates}}
                  <tr>
                      <th scope="row">{{this.title}}</th>
                      <td>{{this.subject}}</td>
                      <td>{{this.createdBy.username}}</td>
                      <td>
                        <a href="/edit_group?group={{this._id}}" style="text-decoration: none;">
                          <button type="button" class="btn edit-button">
                            <i class="fa fa-edit"></i>
                          </button>
                        </a>
                        <span class="space"></span>
                        <button id="delete-{this._id}" type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal-{{this._id}}">
                          <i class="fa fa-trash"></i>
                        </button>
                      </td>
                  </tr>
                  <!-- Modal -->
                  <div class="modal fade" id="delete-modal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="deleteGroupModal" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deleteGroupModalLabel-{{this._id}}">Delete Group</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <span> Are you sure you want to delete this group?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <button type="button" class="btn btn-danger trash" name="{{this.name}}" id="delete-confirm-{{this._id}}">Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  </tr>
          {{/each}}
      </tbody>
  </table>
  {{#if noObjects}}
    {{#if templates}}
      <h3> No Templates </h3>
    {{else}}
      <h3> No Groups </h3>
    {{/if}}
  {{/if}}
  {{#unless noObjects}}
    {{#if noResults}}
      <h4> No Results Found</h4>
    {{/if}}
  {{/unless}}

  {{> pagination}}

  {{#if pending}}
    <script src="/js/collapsible_table.js"></script>
    <script src="/js/pending_requests.js"></script>
  {{else}}
    <script src="/js/home.js"></script>
  {{/if}}
  <script src="/js/table_search.js"></script>
</div>
