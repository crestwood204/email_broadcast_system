{{#if request}}
    {{#compare request "success"}}
        <div class="alert alert-success" role="alert">
            {{../alertMsg}}
        </div>
    {{/compare}}
    {{#compare request "failure"}}
        <div class="alert alert-warning" role="alert">
            {{../alertMsg}}
        </div>
    {{/compare}}
{{/if}}

<div class="content">
    <!-- Create New User -->
    <div>
        <a href="/new_user"><button type="button" class="btn btn-primary">Add New User</button></a>
    </div>

    <!-- Modify Current Users -->
    <h1> Active Users </h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Approver</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                {{#if this.active}}
                    <tr>
                        <th scope="row">{{this.username}}</th>
                        <td>{{this.approver}}</td>
                        <td>{{this.email}}</td>
                        <td><a href="edit_user?user={{this._id}}"><button type="button" class="btn btn-primary">Edit</button></a></td>
                    </tr>
                {{/if}}
            {{/each}}
        </tbody>
    </table>

    <!-- Deactivated Users -->
    <h1> Deactivated Users </h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Approver</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                {{#unless this.active}}
                    <tr>
                        <th scope="row" id="username-{{this._id}}" >{{this.username}}</th>
                        <td>{{this.approver}}</td>
                        <td>{{this.email}}</td>
                        <td><button type="button" class="btn btn-warning" data-toggle="modal" data-target="#activate_modal-{{this._id}}">Activate</button></td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="activate_modal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="deactiveUserModal" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="activateUserModalLabel-{{this._id}}">Activate User</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <span> Are you sure you want to activate </span> <b id="activate_username-{{this._id}}"> </b><span>?</span>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" id={{this._id}} class="btn btn-warning activate_confirm">Activate</button>
                          </div>
                        </div>
                      </div>
                    </div>
                {{/unless}}
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/js/edit_users.js"></script>
