{{#if request}}
    {{#compare request "success"}}
        <div class="alert alert-success" role="alert">
            {{alertMsg}}
        </div>
    {{/compare}}
    {{#compare request "failure"}}
        <div class="alert alert-warning" role="alert">
            {{alertMsg}}
        </div>
    {{/compare}}
{{/if}}
<div class="content">
    <button id="deactivate_user" type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#deactivate_modal">Deactivate User</button>
    <h2> Edit User </h2>
    <form method="POST">
      <div class="form-group">
        <label for="inputUsername" class="col-2 col-form-label">Username</label>
        <input class="form-control" value="{{profile.username}}" type=inputUsername disabled>
        <input name="username" type="hidden" id="inputUsername" placeholder="Username" value="{{profile.username}}">
      </div>
      <div class="form-group">
        <label for="inputEmail" class="col-2 col-form-label">Email Address</label>
        <input class="form-control" name="email" type="inputEmail" id="inputEmail" placeholder="Email Address" value="{{profile.email}}">
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-2 col-form-label">Password</label>
        <div class="input-group" id="show_hide_password">
            <input class="form-control" name="password" type="password" id="inputPassword" placeholder="Password" value="{{profile.password}}">
            <div class="input-group-addon">
            <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
        </div>
        </div>
      </div>
      <div class="form-check">
        <label class="form-check-label">
            {{#if profile.approver}}
                <input type="checkbox" name="approver" class="form-check-input" checked>
            {{else}}
                <input type="checkbox" name="approver" class="form-check-input">
            {{/if}}
          Approver
        </label>
      </div>
      <a href="/edit_users"><button type="button" class="btn btn-danger">Cancel</button></a>
      <button type="submit" class="btn btn-success">Save</button>
    </form>
    <!-- Modal -->
    <div class="modal fade" id="deactivate_modal" tabindex="-1" role="dialog" aria-labelledby="deactiveUserModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deactivateUserModalLabel">Deactivate User</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <span> Are you sure you want to deactivate </span> <b id="deactivate_username"> </b><span>?</span>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="deactivate_confirm">Deactivate</button>
          </div>
        </div>
      </div>
    </div>
</div>
<script src="/js/edit_user.js"></script>
