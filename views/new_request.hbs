<div id="error_msg" class="alert alert-warning display-none" role="alert">
    Error Retrieving Template
</div>
{{#if request}}
    {{#compare request "success"}}
        <div class="alert alert-success" role="alert">
            {{alert_msg}}
        </div>
    {{/compare}}
    {{#compare request "failure"}}
        <div class="alert alert-warning" role="alert">
            {{alert_msg}}
        </div>
    {{/compare}}
{{/if}}
<form class="content" method="post" action="/new_request" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="toField">To:</label><br>
            <select id="toField" name="toField" class="selectpicker form-control" multiple>
                {{#each groups}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="locationField">Location:</label><br>
            <select id="locationField" name="locationField" class="selectpicker form-control" multiple>
                {{#each groups}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group col-md-12">
        <label for="templateField">Template:</label>
        <select id="templateField" class="form-control">
          <option value="Choose..."selected>Choose...</option>
          {{#each templates}}
              <option>{{this.title}}</option>
          {{/each}}
        </select>
    </div>
    <div class="form-group col-md-12">
        <label for="subject">Subject:</label>
        <input name="subject" type="subject" class="form-control" id="subject" aria-describedby="requestSubject" placeholder="Enter subject" value="{{subject}}">
    </div>
    <div class="form-group col-md-12">
        <label for="body">Body:</label>
        <textarea name="body" class="form-control" rows="5" id="body">{{body}}</textarea>
    </div>
    <div class="form-group col-md-6">
        <label for="locationField">Attach a File:</label><br>
        <input type="file" name="files" id="thumbnail" style="padding-top: 7px" multiple>
    </div>
    <div class="form-group col-md-12">
        <button id="new_request" clicked="false" type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<script src="/js/new_request.js"></script>
